include ../abstracts/bemto/bemto.pug

// Form review
+b.SECTION(class= 'form--review')
  form(action='', method='', id= 'formReview')
    //- +e.A.close(href='#') Закрыть
    +e.H3.title Оставить отзыв
    .form-group.field-name
      +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя*')
      p.help-block.help-block-error Ошибка заполнения поля формы
    .form-group.field-email
      +e.INPUT.input(type='email', name='Email', placeholder='Ваш e-mail*')
      p.help-block.help-block-error Ошибка заполнения поля формы
    .form-group.field-text
      +e.TEXTAREA.textarea(type='text', name='Ваш отзыв', placeholder='Ваш отзыв*')
      p.help-block.help-block-error Ошибка заполнения поля формы
    .form-group
      +b.BUTTON.btn--form(type='submit') Оставить отзыв
      p.help-block.help-block-success Отзыв успешно оставлен